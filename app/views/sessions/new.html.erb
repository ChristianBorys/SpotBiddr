<div class="container">
    <div class="row">
        <div class="span6 offset5">

            <h1> Log in</h1>
              <%= form_tag sessions_path do %>
                <div class="field">
                  <%= label_tag :email %>
                  <%= text_field_tag :email, params[:email] %>
                </div>
                <div class="field">
                  <%= label_tag :password %>
                  <%= password_field_tag :password %>
                </div>
                <button class="btn btn-success btn-large active">
                  <%= "Log In" %>
                </button>
              <% end %>
        </div>
    </div>
</div>
