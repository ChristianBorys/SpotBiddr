
    <% if current_user %>
        Logged in as <%= current_user.email %><br>
        <div>
          <%= link_to "Log Out", logout_path, class: "btn btn-success btn-large active" %>
        </div>
    <% else %>
          <div>
            <%= link_to "Sign Up", signup_path, class: "btn btn-success btn-large active" %>
          </div><br>               
          <div>
            <%= link_to "Log In", login_path, class: "btn btn-success btn-large active" %>
          </div>
    <% end %>
          <% flash.each do |name, msg| %>
          <% content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
